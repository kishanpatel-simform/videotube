<%- include ("layouts/header") %>
    
<div class="container my-4">
        <div class="row">
            <div class="col-md-12">
                <h1>Subscribed Channels</h1>
            </div>
        </div>
        <div class="row">
            <% user.subscription=user.subscription.reverse();
            user.subscription.forEach(function (channel) { %>
                <div class="col-md-4">
                    <div class="card h-100">
                        <img class="card-img-top" src="<%= baseUrl + channel.image %>" onerror="this.src = 'http://placehold.it/1900x700'">
                        <div class="card-body">
                            <h4 class="card-title">
                                <%= channel.name %>
                                    <span style="font-size: 14px; font-weight: normal; float: right; position: relative; top: 7px;">
                                        <%= channel.subscribers %> subscribers
                                    </span>
                            </h4>
                        </div>
                        <div class="card-footer">
                            <a href="/channel/<%= channel._id %>" class="btn btn-primary">View</a>
                            <form method="POST" action="/remove-channel-from-subscription" onsubmit=" confirm('Are you sure you want to delete this channel from sunscription ?')" style="display: contents;">
                                <input type="hidden" name="_id" value="<%= channel._id %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
    <%- include ("layouts/footer") %>