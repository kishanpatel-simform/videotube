<button class="btn btn-danger mt-1" type="button" onclick="doSubscribe();">Subscribe
    <strong id="total-subscribers"><%= video.user.subscribers %></strong>
</button>

<script>
    function doSubscribe() {
        var ajax = new XMLHttpRequest();
        ajax.open("POST", "/do-subscribe", true);
        ajax.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");

        ajax.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                var response = JSON.parse(this.responseText);

                if (response.status == "success") {
                    var totalSubscriber = document.getElementById("total-subscribers").innerHTML;
                    totalSubscriber++;
                    document.getElementById("total-subscribers").innerHTML = totalSubscriber;
                } else {
                    alert(response.message);
                }

            }
        };


        var videoId = document.getElementById("videoId").value;
        ajax.send("videoId=" + videoId);
    }
</script>