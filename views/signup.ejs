<%- include ("layouts/header") %>

    <div class="container">
        <div class="row my-4 bg-success">
            <div class="col-md-12 ">
                <div class="text-center mb-5 login-main-left-header pt-4">
                    <h5 class="mt-3 mb-3">Welcome to Video Streaming Plateform</h5>
                </div>
                <form action="/signup" method="POST">
                    <div class="row">

                    </div>

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" id="name">
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="email" id="email">
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="password" id="password">
                    </div>

                    <div class="mt-4">
                        <p class="text-danger" id="error"></p>
                        <p class="text-success" id="success"></p>

                        <button type="submit" class="btn btn-primary btn-block btn-lg">Sign Up</button>
                    </div>
                </form>
                <div class="text-center mt-5">
                    <p class="light-gray">Already have an Account? <a class="text-dark" href="/login">Sign In</a></p>
                </div>
            </div>
        </div>
    </div>

    <%- include ("layouts/footer") %>